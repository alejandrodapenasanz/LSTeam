  <script type='text/javascript'>
        
      function logoutButton(){
          var ajaxASYNC = {
              request: function (url){
                  var xhr = new XMLHttpRequest();
                  xhr.open("POST", url, false);
                  xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
                  xhr.send(JSON.stringify({"name": "test", "job": "test"}));
                  return xhr.status;
              }
          };
      return ajaxASYNC.request("http://localhost:8030/logout");
      }

      function funcionDelete(gameId){
        $.ajax({
          type: 'DELETE',
          url: 'http://localhost:8030/user/wishlist/'+gameId,
          data: gameId
        }).done(function (data){
          location.reload();
        });
      }
      
  </script>

